<!DOCTYPE html>
<html>
<head>
  {{> html-head title="Carousel" }}
</head>
<body>
  <div class="container pb-4">
    <h1 class="mb-3">CAROUSEL WITH BULLETS</h1>
    <div id="carouselWithBullets" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselWithBullets" data-slide-to="0" class="active rounded-circle border-0"></li>
        <li data-target="#carouselWithBullets" data-slide-to="1" class="rounded-circle border-0"></li>
        <li data-target="#carouselWithBullets" data-slide-to="2" class="rounded-circle border-0"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Third slide">
        </div>
      </div>
    </div>

    <h1 class="mb-3">CAROUSEL WITH RIGHT BULLETS INDICATORS</h1>
    <div id="carouselWithRightBullets" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators carousel-indicators--right">
        <li data-target="#carouselWithRightBullets" data-slide-to="0" class="active rounded-circle border border-white"></li>
        <li data-target="#carouselWithRightBullets" data-slide-to="1" class="rounded-circle border border-white"></li>
        <li data-target="#carouselWithRightBullets" data-slide-to="2" class="rounded-circle border border-white"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Third slide">
        </div>
      </div>
    </div>

    <h1 class="mt-5">CAROUSEL WITH BULLETS PRIMARY COLOR</h1>
    <div id="carouselWithBullets" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators carousel-indicators--primary">
        <li data-target="#carouselWithBullets" data-slide-to="0" class="active rounded-circle border-0"></li>
        <li data-target="#carouselWithBullets" data-slide-to="1" class="rounded-circle border-0"></li>
        <li data-target="#carouselWithBullets" data-slide-to="2" class="rounded-circle border-0"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Third slide">
        </div>
      </div>
    </div>

    <h1 class="mt-5">CAROUSEL WITH BULLETS BODY COLOR</h1>
    <div id="carouselWithBulletsBody" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators carousel-indicators--body">
        <li data-target="#carouselWithBulletsBody" data-slide-to="0" class="active rounded-circle border-0"></li>
        <li data-target="#carouselWithBulletsBody" data-slide-to="1" class="rounded-circle border-0"></li>
        <li data-target="#carouselWithBulletsBody" data-slide-to="2" class="rounded-circle border-0"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Third slide">
        </div>
      </div>
    </div>

    <h1 class="mt-5">CAROUSEL WITH CONTROLS</h1>
    <div id="carouselWithControls" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselWithControls" data-slide-to="0" class="active rounded-circle border-0"></li>
        <li data-target="#carouselWithControls" data-slide-to="1" class="rounded-circle border-0"></li>
        <li data-target="#carouselWithControls" data-slide-to="2" class="rounded-circle border-0"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Third slide">
        </div>
      </div>
      <a class="carousel-control carousel-control-prev" href="#carouselWithGroupedControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-prev.svg" replace-to-svg /></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control carousel-control-next" href="#carouselWithGroupedControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-next.svg" replace-to-svg /></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h1 class="mt-5">CAROUSEL WITH GROUPED CONTROLS</h1>
    <div id="carouselWithGroupedControls" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#carouselWithGroupedControls" data-slide-to="0" class="active rounded-circle border-0"></li>
        <li data-target="#carouselWithGroupedControls" data-slide-to="1" class="rounded-circle border-0"></li>
        <li data-target="#carouselWithGroupedControls" data-slide-to="2" class="rounded-circle border-0"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="First slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Second slide">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://via.placeholder.com/300x100" alt="Third slide">
        </div>
      </div>

      <a class="carousel-control carousel-control-prev carousel-control--background carousel-control--right-lg" href="#carouselWithGroupedControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-prev.svg" replace-to-svg /></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control carousel-control-next carousel-control--background carousel-control--right-lg" href="#carouselWithGroupedControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-next.svg" replace-to-svg /></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h1 class="mt-5">CAROUSEL LOOP 3 ITEMS</h1>
    <div id="carouselLoop" class="carousel slide carousel--loop carousel--swipe row" data-slide-number="3">
      <div class="carousel-inner d-flex flex-nowrap" role="listbox">
        <div class="carousel-item col-12 col-md-4 active">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=1" alt="slide 1"/>
        </div>
        <div class="carousel-item col-12 col-md-4 ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=2" alt="slide 2"/>
        </div>
        <div class="carousel-item col-12 col-md-4 ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=3" alt="slide 3"/>
        </div>
        <div class="carousel-item col-12 col-md-4 ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=4" alt="slide 4"/>
        </div>
        <div class="carousel-item col-12 col-md-4 ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=5" alt="slide 5"/>
        </div>
        <div class="carousel-item col-12 col-md-4 ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=6" alt="slide 6"/>
        </div>
        <div class="carousel-item col-12 col-md-4 ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=7" alt="slide 7"/>
        </div>
        <div class="carousel-item col-12 col-md-4  ">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=8" alt="slide 8"/>
        </div>
      </div>
      <a class="carousel-control carousel-control-prev carousel-control--background carousel-control--loop" href="#carouselLoop" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-prev.svg" replace-to-svg /></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control carousel-control-next carousel-control--background carousel-control--loop" href="#carouselLoop" role="button" data-slide="next">
        <span class="carousel-control-next-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-next.svg" replace-to-svg /></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <h1 class="mt-5">CAROUSEL LOOP 4 ITEMS</h1>
    <div id="carouselLoop4" class="carousel slide carousel--loop row" data-slide-number="4">
      <div class="carousel-inner d-flex flex-nowrap" role="listbox">
        <div class="carousel-item col-12 col-md-3 active">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=1" alt="slide 1"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=2" alt="slide 2"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=3" alt="slide 3"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=4" alt="slide 4"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=5" alt="slide 5"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=6" alt="slide 6"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=7" alt="slide 7"/>
        </div>
        <div class="carousel-item col-12 col-md-3">
          <img class="img-fluid" src="//via.placeholder.com/600x400?text=8" alt="slide 8"/>
        </div>
      </div>
      <a class="carousel-control carousel-control-prev carousel-control--background carousel-control--loop" href="#carouselLoop4" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-prev.svg" replace-to-svg /></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control carousel-control-next carousel-control--background carousel-control--loop" href="#carouselLoop4" role="button" data-slide="next">
        <span class="carousel-control-next-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-next.svg" replace-to-svg /></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <h1 class="mt-5">CAROUSEL LOOP 4 ITEMS CENTERED</h1>
    <div id="carouselLoopCentered" class="carousel slide carousel--loop carousel--swipe" data-slide-number="4">
      <div class="carousel--centered">
        <div class="carousel-inner row flex-nowrap" role="listbox">
          <div class="carousel-item col-9 col-md-3 active">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=1" alt="slide 1"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=2" alt="slide 2"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=3" alt="slide 3"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=4" alt="slide 4"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=5" alt="slide 5"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=6" alt="slide 6"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=7" alt="slide 7"/>
          </div>
          <div class="carousel-item col-9 col-md-3">
            <img class="img-fluid" src="//via.placeholder.com/600x400?text=8" alt="slide 8"/>
          </div>
        </div>
      </div>
        <a class="carousel-control carousel-control-prev carousel-control--background floating-out-left justify-content-start text-primary" href="#carouselLoopCentered" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-prev.svg" replace-to-svg /></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control carousel-control-next carousel-control--background floating-out-right justify-content-end text-primary" href="#carouselLoopCentered" role="button" data-slide="next">
          <span class="carousel-control-next-icon d-flex justify-content-center align-items-center" aria-hidden="true"><img class="svg" src="icons/chevron-next.svg" replace-to-svg /></span>
          <span class="sr-only">Next</span>
        </a>
    </div>
  </div>

  {{> js jquery=true bootstrap=true main=true }}
  <script src="/cocoandeve-styleguides/js/bootstrap.js"></script>
  <script src="/cocoandeve-styleguides/js/main.js"></script>
</body>
</html>
