<!DOCTYPE html>
<html>

<head>
	{{> html-head title="Forms" }}
</head>

<body class="mobile-wrapper">
	<div class="container mt-4">
		<h1>Forms</h1>
		<div class="row mt-4">
			<div class="col mb-3">

				<div class="search-box input-group input-group-sm">
					<div class="input-group-prepend">
						<span class="input-group-text search-box__icon">
							<img class="svg" src="icons/search.svg" replace-to-svg />
						</span>
					</div>
					<input type="text" class="form-control" id="exampleSearch" placeholder="Search">
					<div class="input-group-append">
						<a class="input-group-text search-box__close align-items-center" href="#" role="button">
							<img class="svg" src="icons/close.svg" replace-to-svg />
						</a>
					</div>
					<div class="input-group-append">
						<button class="search-box-btn btn btn-primary" type="submit">Search</button>
					</div>
				</div>

			</div>
		</div>

		<div class="row">
			<div class="col">
				<form>
					<div class="row">
						<div class="input-group form-group col-lg-6">
							<input class="form-control" type="text" placeholder="Name*" required />
						</div>
						<div class="input-group form-group col-lg-6">
							<input class="form-control" type="email" placeholder="Email*" required />
						</div>
					</div>
					<div class="row">
						<div class="input-group form-group col-lg-6">
							<input class="form-control" type="text" placeholder="Name disabled" disabled />
						</div>
						<div class="input-group form-group col-lg-6">
							<input class="form-control" type="email" placeholder="Email disabled" value="Email disabled with value" disabled />
						</div>
					</div>
					<div class="row">
						<div class="input-group form-group col-lg-6">
							<select class="custom-select">
								<option selected>Select</option>
								<option>Option 1</option>
								<option>Option 2</option>
								<option>Option 3</option>
							</select>
						</div>
						<div class="input-group form-group col-lg-6">
							<select class="custom-select" disabled>
								<option selected>Select</option>
								<option>Option 1</option>
								<option>Option 2</option>
								<option>Option 3</option>
							</select>
						</div>
					</div>
					<div class="row">
						<div class="input-group form-group col">
							<textarea class="form-control" placeholder="Your comment" rows="7" required></textarea>
						</div>
					</div>

					<div class="row">
						<div class="input-group form-group col">
							<div class="custom-checkbox d-flex justify-content-center align-items-center mr-1 border rounded">
								<img class="svg text-primary" src="icons/check.svg" replace-to-svg />
							</div>
							<label class="form-check-label font-size-sm">I agree to <a href="#">Privacy Policy & ToS</a></label>
						</div>
					</div>

					<div class="row">
						<div class="form-group col">
							<button class="btn btn-lg btn-primary" type="submit">Submit form</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>

	{{> js jquery=true main=true }}
</body>

</html>
