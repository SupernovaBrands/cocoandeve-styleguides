      <div class="row">
        <div class="col text-center">
          <a href="#" class="btn btn-lg btn-primary" id="real-result__show-more">Show more reviews</a>
        </div>
      </div>
    </div>
  </section>
  {{> sections/product-carousel bgclass="bg-yellow-light"}}
  {{> sections/instagram bgclass="bg-yellow-light"}}
  {{> sections/services}}
  {{> sections/footer}}
	{{> js jquery=true bootstrap=true main=true }}
</body>

</html>
