<form action="" class="product-form rounded bg-white fixed-bottom">
    <div class="px-2 py-g h4 mb-0 border-bottom">Shampo & Conditioner</div>
    <figure class="media align-items-center px-2 py-1 mb-0">
        <div class="media-body">
            {{#> components/product-variant name="product-variant" title="Shampo & Conditioner Set" value="shampoo-conditioner-set-overlay" compare=true class="mb-1 mt-1" note="Super Hydrating Shampoo (250ml)" hideSwatch="true" quickShop=true titleClass="font-weight-bold"}}
                <button type="button" class="variant-swatch medium mr-2 border-primary" data-value="medium" data-id="32363243831331"></button>f
                <p class="font-size-sm w-100 mt-2 mb-0 swatch-label-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
            {{/ components/product-variant}}

            {{#> components/product-variant name="product-variant" title="Subscription (20% OFF)" title_subscription="Monthly Subscription" value="shampoo-conditioner-set-subscription-overlay" compare=true class="mb-1 product-variant--subscription" note="Super Hydrating Shampoo (250ml)" titleClass="font-weight-bold" hideSwatch="true" checked=true subscription=true quickShop=true}}
                <button type="button" class="variant-swatch medium mr-2 border-primary" data-value="medium" data-id="32363243831331"></button>
                <p class="font-size-sm w-100 mt-2 mb-0 swatch-label-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
            {{/ components/product-variant}}
        </div>
    </figure>
    <div class="p-g collection-swatch__price">
        <div class="d-flex justify-content-between">
            <span class="h2">Price</span>
            <span class="h2">$99.90</span>
        </div>
        <button type="button" class="btn btn-primary btn-lg btn-block">Add To Cart</button>
    </div>
    <img class="svg position-absolute collection-swatch__close" src="icons/close.svg" replace-to-svg />
</form>
{{> components/product-waitlist-oos class="order-lg-2 d-none px-g pt-g pb-2 collection-swatch__waitlist fixed-bottom" showtext=true}}
