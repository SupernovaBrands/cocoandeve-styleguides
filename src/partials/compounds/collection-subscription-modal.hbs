<div class="modal-content rounded-0 flex-row">
	<img src="https://via.placeholder.com/370x514" alt="Slide 0" class="w-auto">
	<div class="position-relative flex-grow-1">
		<form action="" class="product-form">
			<div class="pl-3 pr-g">
				<h3 class="my-2">Shampo & Conditioner</h3>
				<figure class="media mb-2">
					<div class="media-body">
						{{#> components/product-variant name="product-variant" title="Shampo & Conditioner Set" value="shampoo-conditioner-set" compare=true class="mb-1" note="Super Hydrating Shampoo (250ml)" hideSwatch="true" quickShop=true titleClass="font-weight-bold"}}
							<button type="button" class="variant-swatch medium mr-2 border-primary" data-value="medium" data-id="32363243831331"></button>
							<p class="font-size-sm w-100 mt-2 mb-0 swatch-label-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
						{{/ components/product-variant}}

						{{#> components/product-variant name="product-variant" title="Subscription (20% OFF)" title_subscription="Monthly Subscription" value="shampoo-conditioner-set-subscription" compare=true class="mb-3 product-variant--subscription" note="Super Hydrating Shampoo (250ml)" titleClass="font-weight-bold" hideSwatch="true" checked=true subscription=true quickShop=true}}
							<button type="button" class="variant-swatch medium mr-2 border-primary" data-value="medium" data-id="32363243831331"></button>
							<p class="font-size-sm w-100 mt-2 mb-0 swatch-label-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
						{{/ components/product-variant}}
					</div>
				</figure>
			</div>
			<div class="collection-swatch__price position-absolute px-g pb-2 pt-g">
				<div class="d-flex justify-content-between">
					<span class="h4">Price</span>
					<span class="h4">$99.90</span>
				</div>
				<button type="button" class="btn btn-primary btn-lg btn-block">Add To Cart</button>
			</div>
			<img data-dismiss="modal" aria-label="Close" class="svg position-absolute collection-swatch__close"
				src="icons/close.svg" replace-to-svg />
		</form>
		{{> components/product-waitlist-oos class="collection-swatch__waitlist order-lg-2 d-none position-absolute pb-2 px-g pt-g" showtext=true}}
	</div>
</div>
