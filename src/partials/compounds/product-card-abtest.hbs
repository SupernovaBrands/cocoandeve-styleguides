<figure class="product-card position-relative col-6 col-lg-3 d-flex flex-column {{ class }}">
	<a>
		<picture>
			<img src="https://via.placeholder.com/165x165/F0F0F0/333/?text={{ text }}" alt="Placeholder" class="d-block w-100" loading="lazy">
		</picture>
	</a>
	<figcaption class="pt-1 position-relative flex-grow-1 d-flex flex-column bg-primary-light-second">
		<form class="product-card-form flex-grow-1 d-flex flex-column h-100">
			<input type="hidden" name="id" value="variantId">
			<input type="hidden" name="quantity" value="1">
			<div class="mb-25 px-1 flex-grow-1 align-items-center">
				<div class="react-yotpo-star" data-product-id="4543113265187" data-show-total="true" data-hide-stars="true"><div class="d-flex align-items-center"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" class="svg text-secondary"><path d="M11.183 2.123l1.52 3.88a1.263 1.263 0 00.892.7l4.463.3a1.111 1.111 0 01.929 1.266 1.116 1.116 0 01-.33.637l-3.372 3.113a1.141 1.141 0 00-.3 1.1l.991 4.52a1.074 1.074 0 01-.751 1.318 1.071 1.071 0 01-.835-.116l-3.867-2.41a1.061 1.061 0 00-1.091 0l-3.867 2.41a1.07 1.07 0 01-1.471-.363 1.079 1.079 0 01-.116-.837l.991-4.52a1.144 1.144 0 00-.3-1.1l-3.272-3a1.154 1.154 0 01-.118-1.625 1.15 1.15 0 01.712-.388l4.463-.4a1.061 1.061 0 00.892-.7L9.131 1.59a1.015 1.015 0 011.352-.488 1.019 1.019 0 01.528.588z"></path></svg><span class="ml-1 mt-1 font-size-xs">4.8/5.0</span><span class="ml-1 mt-1 font-size-xs"><a class="text-underline text-nowrap text-dark" href="#write-a-review">5 Reviews</a></span></div></div>
			</div>
			<p class="px-1 flex-grow-1 d-flex flex-column justify-content-start h4 h-100 mb-1 mb-lg-2">
				<a class="text-body font-weight-bold">{{ title }}</a>
			</p>
			<p class="product-card__text px-1 mb-1 mb-lg-2">
				<span class="font-weight-bold text-muted text-linethrough">$39.73</span>
				<span class="font-weight-bold">$39.73</span>
			</p>
			<button class="btn btn-block btn-primary btn__submit {{#if swatch}}btn-choose{{/if}}" type="submit">{{#if swatch}}{{swatch}}{{else}}Add to cart{{/if}}</button>
			{{#if swatch}}
			<div class="swatch-overlay flex-column align-items-center justify-content-end w-100 pb-0 position-absolute bg-primary-light-second">
				<div class="text-center w-100 py-2 px-1 d-flex flex-column">
					{{#if swatch_style}}
					<label class="mb-1"><strong>Style: </strong><span data-swatch-label>Girl Print: Limited edition!</span></label>
					<ul class="list-unstyled product-variant-swatch d-flex justify-content-center mb-1">
						<li class="product-variant-swatch__item available active col-3" data-available="available">
							<span data-id="32068891607075" data-val="Girl Print" class="d-block border-primary mx-auto  variant-swatch girl-print"></span>
						</li>
						<li class="product-variant-swatch__item available col-3" data-available="available">
							<span data-id="32068891639843" data-val="Print Leaf" class="d-block mx-auto variant-swatch leaf-print"></span>
						</li>
					</ul>
					{{/if}}
					{{#if swatch_color}}
					<label class="mb-1"><strong>Shade: </strong><span data-swatch-label="">Medium</span></label>
					<ul class="list-unstyled product-variant-swatch d-flex justify-content-center mb-1">
						<li class="product-variant-swatch__item col-3 p-0 available " data-available="available">
							<span data-id="32758103343158" data-val="Medium" class="d-block variant-swatch medium border-primary mx-auto"></span>
						</li>
						<li class="product-variant-swatch__item col-3 p-0 available " data-available="available">
							<span data-id="32758120808502" data-val="Dark" class="d-block variant-swatch dark mx-auto"></span>
						</li>
						<li class="product-variant-swatch__item col-3 p-0 available " data-available="available">
							<span data-id="32758122512438" data-val="Ultra Dark" class="d-block variant-swatch ultra-dark   mx-auto "></span>
						</li>
            		</ul>
					{{/if}}
				</div>
				<button type="button" class="btn btn-primary btn__submit add-to-cart btn-block">Add To Cart</button>
			</div>
			{{/if}}
		</form>
	</figcaption>
</figure>
