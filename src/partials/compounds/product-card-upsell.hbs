<div class="col-12 col-lg-4 carousel-item {{active}} product-card flex-grow-1 w-100">
    <a href="#" class="item-third pl-lg-0 d-flex flex-grow-1 flex-column bg-pink-light text-body position-relative">
        <span class="badge badge--square bg-white position-absolute font-weight-normal font-size-sm product-card__tag">{{step}}</span>
        <noscript class="loading-lazy">
            <picture class="embed-responsive embed-responsive-1by1 bg-shimmer mx-auto my-0 mx-lg-0">
                <source srcset="https://cdn.shopify.com/s/files/1/0286/1327/9779/products/MasqueTravelSize_614x614.jpg?v=1644810671" media="(min-width: 992px)" />
                <img class="embed-responsive-item fit--cover px-3 bg-pink-light"
                alt="Image Alt"
                loading="lazy"
                src="https://cdn.shopify.com/s/files/1/0286/1327/9779/products/MasqueTravelSize_614x614.jpg?v=1644810671">
            </picture>
        </noscript>
        <div class="product-card__content pb-0 position-relative flex-grow-1 d-flex flex-column px-2 px-lg-3 bg-pink-light">
            <p class="product-card__title font-weight-bold text-center text-dark h4">{{title}}</p>
            <p class="product-card__desc text-center font-weight-normal d-flex flex-column">{{text}}</p>
            <p class="text-center d-flex flex-row flex-grow-1 justify-content-center align-items-end">
                {{#if compare_price }}<span class="text-linethrough h4 m-1">{{compare_price}}</span>{{/if}}<span class="text-primary h4 my-1">{{price}}</span>
            </p>
            {{#if swatch_shade }}
            <button type="button" class="product-card__button mx-auto btn btn-lg btn-primary mb-2 btn-block px-0 btn-choose">Choose Shade</button>
            <div class="swatch-overlay flex-column align-items-center justify-content-end w-100 pb-0 position-absolute mx-auto mb-2 h-auto">
                <div class="text-center w-100 pt-2 pb-lg-2">
                    <label class="mb-2"><strong>Shade: </strong><span data-swatch-label>Dark</span></label>
                    <ul class="list-unstyled product-variant-swatch d-flex justify-content-center mb-1 mb-lg-1">
                        <li class="product-variant-swatch__item available col-3 p-0 " data-available="available">
                            <span data-id="32068891541539" data-val="Medium" class="mx-auto d-block variant-swatch medium oos"></span>
                        </li>
                        <li class="product-variant-swatch__item available active col-3 p-0 " data-available="available">
                            <span data-id="32068891607075" data-val="Dark" class="d-block border-primary mx-auto variant-swatch dark"></span>
                        </li>
                        <li class="product-variant-swatch__item available col-3 p-0 " data-available="available">
                            <span data-id="32068891639843" data-val="Ultra Dark" class="d-block mx-auto variant-swatch ultra-dark"></span>
                        </li>
                    </ul>
                </div>
                <button type="button" class="product-card__button mx-auto btn btn-lg btn-primary btn-block add-to-cart px-0">
                    Add To Cart
                </button>
            </div>
            {{else}}
            <button type="button" class="product-card__button mx-auto btn btn-lg add-to-cart btn-block px-0 mb-2 btn-primary">
                Add To Cart
            </button>
            {{/if}}
        </div>
    </a>
    <div class="item-third pl-lg-0 d-flex d-lg-none flex-grow-1 flex-column bg-pink-light position-relative">
        <span class="badge badge--square bg-white position-absolute font-weight-normal font-size-sm product-card__tag">{{nextStep}}</span>
        <noscript class="loading-lazy">
            <picture class="embed-responsive embed-responsive-1by1 bg-shimmer mx-auto my-0 mx-lg-0">
                <source srcset="https://cdn.shopify.com/s/files/1/0286/1327/9779/products/MasqueTravelSize_614x614.jpg?v=1644810671" media="(min-width: 992px)" />
                <img class="embed-responsive-item fit--cover px-3 bg-pink-light"
                alt="Image Alt"
                loading="lazy"
                src="https://cdn.shopify.com/s/files/1/0286/1327/9779/products/MasqueTravelSize_614x614.jpg?v=1644810671">
            </picture>
        </noscript>
        <div class="product-card__content pb-0 position-relative flex-grow-1 d-flex flex-column px-2 px-lg-3 bg-pink-light">
            <p class="product-card__title font-weight-bold text-center text-dark h4">{{nexttitle}}</p>
            <p class="product-card__desc text-center font-weight-normal d-flex flex-column">{{nexttext}}</p>
            <p class="text-center d-flex flex-row flex-grow-1 justify-content-center align-items-end">
                {{#if compare_price }}<span class="text-linethrough h4 m-1">{{compare_price}}</span>{{/if}}<span class="text-primary h4 my-1">{{price}}</span>
            </p>
            <button type="button" class="product-card__button mx-auto btn btn-lg add-to-cart btn-block px-0 btn-outline-primary bg-white mb-2 text-primary">
                Add To Cart
            </button>
        </div>
    </div>
</div>