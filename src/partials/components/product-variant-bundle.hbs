<div class="product-variant custom-radio w-100 {{ class }}">
	<input id="{{name}}-{{value}}" class="custom-control-input" type="radio" name="{{name}}" value="{{value}}" {{#if checked}}checked{{/if}} />
	<label for="{{name}}-{{value}}" class="custom-control-label w-100 border py-2 pr-2 rounded">
		<p class="mb-1 font-weight-bold">{{title}}</p>
		<p class="mb-1 font-size-sm">1x Bronzing Face Drops 30ml</p>
        {{#if note}}
		<p class="mb-1 font-size-sm">1x Other items</p>
		<p class="mb-1 font-size-sm">1x {{note}}</p>
        {{/if}}

		<div class="product-swatch mb-1">
			<button type="button" class="variant-swatch medium mr-1 border-primary" data-value="foam-medium" data-id="32068892295203"></button>
            <button type="button" class="variant-swatch oos waitlist dark mr-1" data-value="foam-dark" data-id="32068892327971"></button>
            <button type="button" class="variant-swatch ultra-dark" data-value="foam-ultra-dark" data-id="32068892360739"></button>
            <p class="font-size-sm w-100 mt-1 mb-0 swatch-label-foam-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
            <p class="font-size-sm w-100 mt-1 mb-0 swatch-label-foam-dark d-none"><b>Dark</b> - Subtle glow, lighter skin tones</p>
            <p class="font-size-sm w-100 mt-1 mb-0 swatch-label-foam-ultra-dark d-none"><b>Ultra Dark</b> - Subtle glow, lighter skin tones</p>
		</div>

        <hr class="border-top product-variant__note mt-g mb-g mb-lg-1">

		<p class="mb-1 font-size-sm">1 x Sunny Honey Bali Bronzing Foam</p>
        <div class="product-swatch mb-1">
			<button type="button" class="variant-swatch medium mr-1 border-primary" data-value="drop-medium" data-id="32068892295203"></button>
            <button type="button" class="variant-swatch dark mr-1" data-value="drop-dark" data-id="32068892327971"></button>
            <button type="button" class="variant-swatch ultra-dark oos waitlist" data-value="drop-ultra-dark" data-id="32068892360739"></button>
            <p class="font-size-sm w-100 mt-1 mb-0 swatch-label-drop-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
            <p class="font-size-sm w-100 mt-1 mb-0 swatch-label-drop-dark d-none"><b>Dark</b> - Subtle glow, lighter skin tones</p>
            <p class="font-size-sm w-100 mt-1 mb-0 swatch-label-drop-ultra-dark d-none"><b>Ultra Dark</b> - Subtle glow, lighter skin tones</p>
		</div>

		<p class="mb-0 font-size-sm font-weight-bold">
			<span class="text-primary mr-25 text-nowrap">$44.90</span>
            {{#if compare}}
			<span class="text-linethrough mr-25 text-nowrap">$89.80</span>
			<span class="text-primary text-nowrap">(SAVE 30%)</span>
            {{/if}}
		</p>
	</label>
</div>
