<div class="product-variant custom-radio w-100 {{ class }}">
	<input id="{{name}}-{{value}}" class="custom-control-input" type="radio" name="{{name}}" value="{{value}}" {{#if checked}}checked{{/if}} data-inventory=10 data-id="32068892426275"/>
	<label for="{{name}}-{{value}}" class="custom-control-label w-100 border py-2 pr-2 rounded">
		<p class="{{#if titleClass}}{{titleClass}}{{/if}} product-variant__title  mb-1 font-weight-bold {{#if subscription}}d-flex{{/if}}">
			{{title}} 
			{{#if compare}}
			<span class="save-tag bg-primary text-white rounded font-size-sm font-weight-normal px-1 d-inline d-lg-none">Save 30%</span>
			{{/if}}

			{{#if subscription}}
				<a class="text-primary ml-1" data-container="body" data-toggle="popover" data-placement="top" data-content="<strong>No fuss and frizz, just good hair days ahead.</strong><br/>Keep your hair routine in check and never run out of your washday must-haves every month and free shipping on top of that.<br/><br/>Cancel anytime, and come back when you're ready. ❤️" data-html="true"><img class="svg" src="icons/help.svg" replace-to-svg /></a>
			{{/if}}
		</p>
		{{#if title_subscription}}
		<p class="mb-1 font-weight-bold {{#if titleSubsClass}}{{titleSubsClass}}{{/if}}">{{ title_subscription }}</p>
		{{/if}}
		<p class="product-variant__description mb-1 font-size-sm">1x Masque + Brush</p>
		{{#if note}}
		<p class="product-variant__description mb-1 font-size-sm">1x Other items</p>
		<p class="product-variant__description mb-1 font-size-sm">1x {{note}}</p>
		{{/if}}
		<div class="product-swatch mb-1 {{#if hideSwatch}}d-none{{/if}}">
			{{#if @partial-block}}
			{{> @partial-block }}
			{{/if}}
		</div>
		<p class="product-variant__price-label mb-0 font-size-sm font-weight-bold">
			{{#if compare}}
			<span class="text-linethrough mr-25 text-nowrap font-size-dt-lg font-size-base">$89.80</span>
			{{/if}}
			<span class="text-primary mr-25 text-nowrap font-size-dt-lg font-size-base">$44.90</span>
			{{#if compare}}
			<span class="text-primary text-nowrap font-size-dt-lg font-size-base d-none d-lg-inline">(SAVE 30%)</span>
			{{/if}}
		</p>
	</label>
</div>
