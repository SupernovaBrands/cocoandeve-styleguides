<div class="product-variant custom-radio w-100 {{ class }}">
	<input id="{{name}}-{{value}}" class="custom-control-input" type="radio" name="{{name}}" value="{{value}}" {{#if checked}}checked{{/if}} data-inventory=10 data-id="32068892426275"/>
	<label for="{{name}}-{{value}}" class="custom-control-label w-100 border py-2 pr-2 rounded">
		<p class="{{#if titleClass}}{{titleClass}}{{/if}} mb-1 font-weight-bold {{#if subscription}}d-flex{{/if}}">
			{{title}}
		</p>
		<p class="mb-1 font-size-sm">1x Masque + Brush</p>
		{{#if note}}
		<p class="mb-1 font-size-sm">1x Other items</p>
		<p class="mb-1 font-size-sm">1x {{note}}</p>
		{{/if}}
		<div class="product-swatch mb-1 {{#if hideSwatch}}d-none{{/if}}">
			{{#if @partial-block}}
			{{> @partial-block }}
			{{/if}}
		</div>
		<p class="mb-0 font-size-sm font-weight-bold">
			<span class="text-primary mr-25 text-nowrap">$44.90</span>
			{{#if compare}}
			<span class="text-linethrough mr-25 text-nowrap">$89.80</span>
			<span class="text-primary text-nowrap">(SAVE 30%)</span>
			{{/if}}
		</p>
	</label>
</div>
