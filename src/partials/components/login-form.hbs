<form id="{{id}}" class="p-g shadow collapse show" data-parent="#{{parent}}">
	<p class="font-weight-bold text-center px-2 mb-2">Log In to your account</p>
	<div class="form-group">
		<label for="dropdownLoginFormEmail" id="dropdownLoginFormEmailLabel" class="sr-only">Email</label>
	    <input type="email" class="form-control font-size-sm" id="dropdownLoginFormEmail" placeholder="Email" aria-labelledby="dropdownLoginFormEmailLabelheaderDropdown" />
	</div>
	<div class="form-group mt-2">
		<label for="dropdownLoginFormPassword" id="dropdownLoginFormPasswordLabel" class="sr-only">Password</label>
	    <input type="password" class="form-control font-size-sm" id="dropdownLoginFormPassword" placeholder="Password" aria-labelledby="dropdownLoginFormPasswordLabel" />
	</div>
	<input type="submit" class="btn btn-primary btn-block mt-3 mb-0" disabled value="Log In" />
    <ul class="d-flex justify-content-between mt-2 mb-1 list-unstyled">
    	<li><a href="#" class="text-underline text-primary">Forgot your password?</a></li>
        <li><a href="#{{targetLink}}" class="text-underline text-primary" data-toggle="collapse">Sign Up</a></li>
    </ul>
</form>
