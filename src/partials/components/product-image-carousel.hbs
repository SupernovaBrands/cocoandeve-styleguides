<div class="product-image-carousel__container col-12 col-lg-6 order-lg-2">
	<figure id="product-image-carousel{{#if num}}{{num}}{{/if}}" class="product-image-carousel carousel slide mb-1 mb-lg-0 no-gutters__in-container" data-ride="carousel" data-interval="false" data-indicator="#product-image-carousel__indicator{{#if num}}{{num}}{{/if}}">
		<div class="carousel-inner">
			{{#times totalSlide}}
			<div class="carousel-item {{#if @first}}active{{/if}}">
				<picture {{#if @last}}class="position-relative sni sni__play"{{/if}}>
					<source srcset="https://via.placeholder.com/1140x1260/EFADBA?text=1140x1260+Slide+{{@index}}" media="(min-width: 992px)">
					<img src="https://via.placeholder.com/750x750/EFADBA?text=750x750+Slide+{{@index}}" alt="Slide {{@index}}" class="w-100" />
				</picture>
			</div>
			{{/times}}
		</div>
	</figure>
	<picture class="circle-badge position-absolute rounded-circle bg-primary d-flex p-1 mr-0 mt-2 mr-lg-1 mt-lg-1">
		<img class="w-100" src="../images/badge-25.svg" />
	</picture>
	<div class="tooltip tooltip--sold-out bg-secondary p-1 rounded col-5 col-lg-3 text-white text-center ml-1">
		<span class="d-block font-weight-bold">25</span>
		<span class="font-size-xs">People bought today!.</span>
	</div>
</div>

<div id="product-image-carousel__indicator{{#if num}}{{num}}{{/if}}" class="product-image-carousel__indicator col-12 col-lg-1 order-lg-1 carousel slide carousel--loop mb-1 mb-lg-0 px-0 px-lg-g" {{#if (gt totalSlide 5)}}data-slide-number="5" data-ride="carousel" data-interval="false"{{/if}}>
	{{#if (gt totalSlide 5)}}
	<button class="carousel-indicator btn-unstyled d-none d-lg-flex mx-auto mb-1 mb-lg-3 text-center sni sni__chevron-up text-primary align-items-center" href="#product-image-carousel__indicator{{#if num}}{{num}}{{/if}}" data-slide="prev" aria-hidden="true" disabled>
	</button>
	{{/if}}

	<div class="carousel-inner d-flex flex-nowrap flex-lg-column {{#if (gt totalSlide 5)}}{{else}}justify-content-center justify-content-lg-start{{/if}}">
		{{#times totalSlide}}
		<div class="product-image-carousel__indicator__item carousel-item {{#if @first}}active{{/if}} col-12 px-lg-0 pb-lg-3 mw-100" data-target="#product-image-carousel{{#if num}}{{num}}{{/if}}" data-index="{{@index}}">
			<button class="btn-unstyled border d-block {{#if @first}}border-primary{{else}}border-white{{/if}}">
				<img class="img-fluid mx-auto d-block" src="https://via.placeholder.com/150x150/EFADBA?text={{@index}}" alt="Slide {{@index}}">
			</button>
		</div>
		{{/times}}
	</div>

	{{#if (gt totalSlide 5)}}
	<button class="carousel-indicator btn-unstyled d-none d-lg-flex mx-auto mt-1 mt-lg-3 text-center sni sni__chevron-down text-primary align-items-center" href="#product-image-carousel__indicator{{#if num}}{{num}}{{/if}}" data-slide="next" aria-hidden="true">
	</button>
	{{/if}}
</div>
