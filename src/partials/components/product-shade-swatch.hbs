<div class="d-flex flex-wrap {{class}}">
	{{#if input}}
	<div class="custom-radio mr-2">
		<input id="color-medium" type="radio" name="product-color" value="medium" class="custom-control-input d-none"
			checked />
		<label for="color-medium" class="custom-control-label variant-swatch medium"></label>
	</div>
	<div class="custom-radio mr-2">
		<input id="color-dark" type="radio" name="product-color" value="dark" class="custom-control-input d-none" />
		<label for="color-dark" class="custom-control-label variant-swatch dark"></label>
	</div>
	<div class="custom-radio mr-2">
		<input id="color-ultra-dark" type="radio" name="product-color" value="ultra-dark"
			class="custom-control-input d-none" />
		<label for="color-ultra-dark" class="custom-control-label variant-swatch ultra-dark"></label>
	</div>
	{{else}}
	<label for="color-medium" class="custom-control-label variant-swatch medium mr-2 border-primary"></label>
	<label for="color-dark" class="custom-control-label variant-swatch dark mr-2"></label>
	<label for="color-ultra-dark" class="custom-control-label variant-swatch ultra-dark"></label>
	{{/if}}
	<p class="font-size-sm w-100 mt-2 mb-0 color-medium"><b>Medium</b> - Subtle glow, lighter skin tones</p>
	<p class="font-size-sm w-100 mt-2 mb-0 color-dark d-none"><b>Dark</b> - Subtle glow, lighter skin tones</p>
	<p class="font-size-sm w-100 mt-2 mb-0 color-ultra-dark d-none"><b>Ultra Dark</b> - Subtle glow, lighter skin tones</p>
</div>
