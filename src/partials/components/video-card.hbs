<figure class="video-card {{class}}">
	<picture class="d-block position-relative w-100" data-toggle="modal"
		data-src="{{src}}"
		data-target="#videoCardModal">
		<source srcset="https://via.placeholder.com/{{#if imgsize}}?text={{imgsize}}{{else}}570x570{{/if}}{{#if imgtext}}?text={{imgtext}}{{/if}}" media="(min-width: 992px)">
		<img src="https://via.placeholder.com/275x164" alt="Placeholder" class="d-block w-100">
		<img class="svg" src="icons/play.svg" replace-to-svg />
	</picture>
	{{#if title}}
	<figcaption class="text-center mt-2">
		<h3>{{ title }}</h3>
	</figcaption>
	{{/if}}
</figure>
