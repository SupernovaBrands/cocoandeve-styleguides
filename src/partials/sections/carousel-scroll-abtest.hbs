<div {{#if id}}id="{{ id }}"{{/if}} class="container-fluid px-g my-3 featured-products-carousel">
	<div class="carousel--scroll carousel--scroll__featured position-relative" data-item-scroll="2">
		<div class="carousel-inner container-fluid-scroll d-flex flex-nowrap row w-auto" role="listbox">
			{{#if @partial-block}}{{> @partial-block }}{{/if}}
		</div>
		<div class="mt-2 d-lg-none">
			<div class="scrollbar">
				<div class="scrollbar--thumb bg-primary"></div>
			</div>
		</div>

		<a class="carousel-control carousel-control-prev carousel-control--background justify-content-start text-primary d-none" href="#value-sets" role="button" data-slide="prev">
			<span class="carousel-control-prev-icon d-none d-lg-flex justify-content-center align-items-center bg-primary-light-second" aria-hidden="true">
				<img class="svg" src="icons/chevron-prev.svg" replace-to-svg />
			</span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="carousel-control carousel-control-next carousel-control--background justify-content-end text-primary" href="#value-sets" role="button" data-slide="next">
			<span class="carousel-control-next-icon d-none d-lg-flex justify-content-center align-items-center bg-primary-light-second" aria-hidden="true">
				<img class="svg" src="icons/chevron-next.svg" replace-to-svg />
			</span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<div class="d-flex justify-content-center mt-3 mt-lg-4">
		<button class="btn btn-lg btn-outline-primary">Shop Now</button>
	</div>
</div>
